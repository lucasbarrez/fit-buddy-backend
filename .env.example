# Application
PROJECT_NAME=
VERSION="0.1.0"
DESCRIPTION=
API_V1_PREFIX="/api/v1"
DEBUG=True
ENVIRONMENT="development"

# Development - Disable authentication for testing with Postman
# WARNING: Set to False in production!
DISABLE_AUTH=False

# CORS - Comma separated origins (include your Next.js app)
BACKEND_CORS_ORIGINS='*'

# Supabase - Used by Better Auth for session storage
SUPABASE_URL=
SUPABASE_KEY=

# Prisma USER DB
DATABASE_URL=
BETTER_AUTH_SECRET=

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL="INFO"
LOG_FILE="logs/app.log"
